<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".vityresumenusuarios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btonback"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_back">
                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:fontFamily="@font/baloo_tammudu"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Resumen de usuarios">
                </TextView>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_margin="8dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/linearvitydisetwo"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/alata"
                            android:text="Admin"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txtviewadmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="15dp"
                            android:textColor="@color/black">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/linearvitydisetwo"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:text="Asesores comerciales"
                            android:textSize="16dp"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>

                        <TextView
                            android:id="@+id/txtviewasesorcomercial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="15dp"
                            android:textColor="@color/black">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/linearvitydisetwo"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asesores S cliente"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="16dp"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>

                        <TextView
                            android:id="@+id/txtviewasesorcliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="15dp"
                            android:textColor="@color/black">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/linearvitydisetwo"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:text="Usuarios plataforma"
                            android:textSize="16dp"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>

                        <TextView
                            android:id="@+id/txtviewusuariosplaforma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="15dp"
                            android:textColor="@color/black">
                        </TextView>
                    </LinearLayout>
                </GridLayout>     <LinearLayout
                android:id="@+id/linearusuariosactivos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/linearvitydiseone"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista de usuarios activos"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#7B1FA2"
                    android:textSize="22dp"></TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>